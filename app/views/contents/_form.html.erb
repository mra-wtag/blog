<%= simple_form_for @content do |f| %>
  <%= f.input :title, label: false, input_html: { class: 'form-control col-xs-10', id: 'title-box', placeholder: 'Title of your Content' } %>
  <%= f.input :body, :as => :text, label: false, input_html: { class: 'form-control col-xs-10 space-btn-input redactor', id: 'body-box', rows: 10, placeholder: 'Body of the Content' } %>
  <%= f.submit value, class: 'col-xs-5 btn btn-primary space-btn-input submit_btn' %>
<% end %>